{
  "name": "@metapraxis/wp-file-system",
  "private": "true",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "lint": "composer lint && composer analyse",
    "tests": "npm-run-all tests:unit tests:integration test:e2e",
    "tests:unit": "composer tests:unit",
    "tests:integration": "composer tests:integration",
    "test:e2e": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "prepare": "husky install",
    "wp-env": "wp-env",
    "env:start": "wp-env start",
    "env:stop": "wp-env stop",
    "env:destroy": "wp-env destroy"
  },
  "author": {
    "name": "Method",
    "url": "https://github.com/method-hub"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@playwright/test": "1.55.0",
    "@wordpress/e2e-test-utils-playwright": "1.30.0",
    "@wordpress/env": "10.30.0",
    "husky": "8.0.3"
  },
  "dependencies": {
    "npm-run-all": "4.1.5"
  }
}
