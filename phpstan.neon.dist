includes:
    - vendor/szepeviktor/phpstan-wordpress/extension.neon
    - vendor/phpstan/phpstan-phpunit/extension.neon

parameters:
    level: 5
    paths:
        - src
    bootstrapFiles:
        - vendor/autoload.php
    stubFiles:
        - vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
    scanDirectories:
        - /tmp/wordpress-tests-lib
    excludePaths:
        - tests/*
        - vendor/*
